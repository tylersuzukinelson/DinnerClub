<table border="2" cellpadding="5">
  <thead>
    <tr>
      <th>Username</th>
      <th>E-mail</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to (user.enabled? ? "Disable" : "Enable"), toggle_user_admin_index_path(user), method: :patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>
