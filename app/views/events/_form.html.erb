<%= form_for @event do |f| %>
  <p>
    <%= f.label :restaurant %>
    <%= f.select :restaurant, Restaurant.pluck(:title, :id) %>
  </p>
  <p>
    <%= f.label :start %>
    <%= f.text_field :start %>
  </p>
  <p>
    <%= f.label :end %>
    <%= f.text_field :end %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>