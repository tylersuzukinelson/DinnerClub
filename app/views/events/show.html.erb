              <%= f.submit "Apply penalty" %>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </li>
  <li>
    No:
    <ul>
      <% @event.rsvps.where(rsvp: Rsvp.rsvps[:no]).each do |rsvp| %>
        <li>
          <%= rsvp.user.username %>
          <% if current_user.admin? %>
            <br />
