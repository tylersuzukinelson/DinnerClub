Welcome back <%= current_user.username %>! You are currently sitting at <%= current_user.total_penalties %> penalty points!<br /><br />

<hr>

<% @events.each do |event| %>
  <strong><%= link_to(event.location, event) %></strong>
  <% if current_user.admin? %>
    (
      <%= link_to "Edit", edit_event_path(event) %>
      |
      <%= link_to "Delete", event_path(event), method: :delete %>
    )
  <% end %>
  <br />
  <em><%= event.start %></em><br />
  <hr>
<% end %>